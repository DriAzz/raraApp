                                            <label class="saladMeatsLabel" id="saladMeatsLabel">
                                                Grilled Patty
                                            </label>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="saladGrid-3-3 sG-3-3">
                                <div class="saladEnd-container">
                                    <div class="saladProps-container">
                                        <div class="saladProps-left">
                                            <div class="saladProps-name">
                                                <p>Salad Name:</p>
                                            </div>
                                            <div class="saladProps-nameInput">
                                                <input type="text" placeholder="Name" />
                                            </div>
                                        </div>
                                        <div class="saladProps-right">
                                            <div class="saladProps-price">
                                                <p>Price:</p>
                                            </div>
                                            <div class="saladProps-priceInput">
                                                <input type="text" placeholder="Price" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="saladSubmit-container">
                                        <button type="submit">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>